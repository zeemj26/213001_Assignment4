<Window x:Class="Assignment_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="104" Width="108">
            <TextBlock Text="First Name:" FontFamily="Arial Black" Height="17" Width="131"/>
            <TextBlock Text="{Binding Person.FirstName}" FontWeight="Bold" HorizontalAlignment="Right"/>

            <TextBlock Text="Last Name:" FontFamily="Arial Black"/>
            <TextBlock Text="{Binding Person.LastName}" FontWeight="Bold" HorizontalAlignment="Right"/>

            <TextBlock Text="Age:" FontFamily="Arial Black"/>
            <TextBlock Text="{Binding Person.Age, StringFormat={}{0} years}" FontWeight="Bold" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
